                                                    {#requests}

                                                        <tr>

                                                            <td><a href="/admin/request/view?id={id}">{id}</a></td>
                                                            <td><a href="/admin/user/view?id={userid}">{username}</a></td>
                                                            <td>{posted_on}</td>
                                                            <td>{status}</td>


                                                        </tr>

                                                    {/requests}

                                                </tbody>

                                            </table>

                                    </div>

                            </div>

                        </div>

                   </div>
              </div>

{/content}